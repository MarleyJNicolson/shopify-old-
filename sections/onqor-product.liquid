{{ 'onqor.product-cards.scss.css' | asset_url | stylesheet_tag }}

<section class="onqor-product-cards">
  <h2>{{ section.settings.product_card_title }}</h2>
  <p class="description">{{ section.settings.product_card_description }}</p>
	<div class="onqor-product-cards__container">
			{% for block in section.blocks %} 
			  {% assign product_item = all_products[block.settings.product] %}
        {% assign product_collection = product_item.collections.first %}
        <div class="onqor-product-cards__item">
          <div class="onqor-product-cards__item-inside">
            <p>from {{ product_item.price_min | money }}</p>
            <h3>{{ product_item.title }}</h3>
            <img  src="{{ block.settings.product_img | img_url: '1000x' }}"/> 
          </div>
            <div class="onqor-product-cards__buttons">
              <a href="{{ product_item.url }}"> 
