{% schema %}
{
"name": "Product Cards",
  "settings": [
    {
      "type": "text",
      "id": "product_card_title",
      "label": "title",
      "default": "product cards"
    },
    {
      "type": "text",
      "id": "product_card_description",
      "label": "description",
      "default": "product cards description"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": {
      },
      "settings": [
        {
          "id": "product",
          "type": "product",
          "label": "product"
        },
        {
          "type": "image_picker",
          "id": "product_img",
          "label": "product image"
        },
        {
          "type": "image_picker",
          "id": "product_bg_img",
          "label": "product background image"
        }
      ]
    }
  ],
	"presets": [
	{
	"name": "product cards",
	"category": "ADVANCED LAYOUT"
	}
]
}
{% endschema %}
