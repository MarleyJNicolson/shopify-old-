{{ 'onqor.beforeafter.scss.css' | asset_url | stylesheet_tag }}
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
{{ 'onqor.beforeafter.js' | asset_url | script_tag }}

<section class="before-after">
	<h2>{{ section.settings.title }}</h2>
	<div class="before-after__container">
		<div class="before-after__slider">
			{% assign count = 0 %}
			{% for block in section.blocks %}
			{% assign count = count | plus: 1 %}
			<div class="before-after__item before-after__item-{{ count }}  {% if count == 1 %} before-after__item--active {% endif %}  ">
				<div class="slider-mask">
					<div id="container" class="AB-slidebar">
					    <div class="slider-aft">
					      <div style="width: 550px; height: 540px; background-image: url({{ block.settings.image-after | img_url: '800x' }});" >

					      </div>

					    </div>
					    <div class="slider-bef">
					      <div style="width: 550px; height: 540px; background-image: url({{ block.settings.image-before | img_url: '800x' }}">
					      	
					      </div>
					    </div>
					    <div class="handle-wrapper">
					        <div class="slider-bar">
<!-- 					            <img src="https://global.ralphlauren.com/Style Library/Slider_AB/slider.png"
					            	class="slider-handle"> -->
					            	<svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="arrows-alt-h" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="svg-inline--fa fa-arrows-alt-h fa-w-16 fa-7x"><path fill="currentColor" d="M377.941 169.941V216H134.059v-46.059c0-21.382-25.851-32.09-40.971-16.971L7.029 239.029c-9.373 9.373-9.373 24.568 0 33.941l86.059 86.059c15.119 15.119 40.971 4.411 40.971-16.971V296h243.882v46.059c0 21.382 25.851 32.09 40.971 16.971l86.059-86.059c9.373-9.373 9.373-24.568 0-33.941l-86.059-86.059c-15.119-15.12-40.971-4.412-40.971 16.97z" class=""></path></svg>
							</div>
						</div>
					</div>
				</div>
				<p>{{ block.settings.content }}</p>
			</div>
			{% endfor %}
		</div>

		<div class="before-after__slider before-after__slider--mobile">
			{% assign count = 0 %}
			{% for block in section.blocks %}
			{% assign count = count | plus: 1 %}
			<div class="before-after__item before-after__item-{{ count }}  {% if count == 1 %} before-after__item--active {% endif %}  ">
				<div class="slider-mask">
					<div id="container" class="AB-slidebar">
					    <div class="slider-aft">
					      <div style="width: 300px; height: 540px; background-image: url({{ block.settings.image-after | img_url: '800x' }});" >

					      </div>

					    </div>
					    <div class="slider-bef">
					      <div style="width: 300px; height: 540px; background-image: url({{ block.settings.image-before | img_url: '800x' }}">
					      	
					      </div>
					    </div>
					    <div class="handle-wrapper">
					        <div class="slider-bar">
<!-- 					            <img src="https://global.ralphlauren.com/Style Library/Slider_AB/slider.png"
					            	class="slider-handle"> -->
					            	<svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="arrows-alt-h" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="svg-inline--fa fa-arrows-alt-h fa-w-16 fa-7x"><path fill="currentColor" d="M377.941 169.941V216H134.059v-46.059c0-21.382-25.851-32.09-40.971-16.971L7.029 239.029c-9.373 9.373-9.373 24.568 0 33.941l86.059 86.059c15.119 15.119 40.971 4.411 40.971-16.971V296h243.882v46.059c0 21.382 25.851 32.09 40.971 16.971l86.059-86.059c9.373-9.373 9.373-24.568 0-33.941l-86.059-86.059c-15.119-15.12-40.971-4.412-40.971 16.97z" class=""></path></svg>
							</div>
						</div>
					</div>
				</div>
				<p>{{ block.settings.content }}</p>
			</div>
			{% endfor %}
		</div>

	</div>
	<div class="before-after__button">
		<div class="before-after__button-before" >
		<svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-left" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" class="svg-inline--fa fa-chevron-left fa-w-10 fa-7x"><path fill="currentColor" d="M34.52 239.03L228.87 44.69c9.37-9.37 24.57-9.37 33.94 0l22.67 22.67c9.36 9.36 9.37 24.52.04 33.9L131.49 256l154.02 154.75c9.34 9.38 9.32 24.54-.04 33.9l-22.67 22.67c-9.37 9.37-24.57 9.37-33.94 0L34.52 272.97c-9.37-9.37-9.37-24.57 0-33.94z" class=""></path></svg>
	</div>
	<div class="before-after__button-dots">
		{% assign btncount = 0 %}
		{% for block in section.blocks %}
		{% assign btncount = btncount | plus: 1 %}
			<div class="before-after__dot before-after__dot-{{ btncount }} {% if btncount == 1 %} before-after__dot--active {% endif %} " data-dot="{{ btncount }}" ></div>
		{% endfor %}
	</div>
	<div class="before-after__button-after">
		<svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-left" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" class="svg-inline--fa fa-chevron-left fa-w-10 fa-7x"><path fill="currentColor" d="M34.52 239.03L228.87 44.69c9.37-9.37 24.57-9.37 33.94 0l22.67 22.67c9.36 9.36 9.37 24.52.04 33.9L131.49 256l154.02 154.75c9.34 9.38 9.32 24.54-.04 33.9l-22.67 22.67c-9.37 9.37-24.57 9.37-33.94 0L34.52 272.97c-9.37-9.37-9.37-24.57 0-33.94z" class=""></path></svg>
	</div>
</div>
</section>
{% schema %}
{
  "name": "Before and After",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title",
      "default": "See Our Creams In Action"
    }
  ],
     "blocks":[
      {
        "type": "Before-and-After",
        "name": {
        },
        "settings": [
          {
            "id": "image-before",
            "type": "image_picker",
            "label": "image before"
          },
          {
            "id": "image-after",
            "type": "image_picker",
            "label": "image after"
          },
          {
            "id": "content",
            "type": "text",
            "label": "content"
          }
        ]
      }
   ],
	"presets": [
  	{
  	"name": "Before and After",
  	"category": "ADVANCED LAYOUT"
  	}
  ]
}
{% endschema %}