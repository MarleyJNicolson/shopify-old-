<section class="countdown-hero">
  <div class="countdown-hero__count-container-master">
  	<div class="countdown-hero__count-container"  data-countdown="{{ settings.countdown_text }}"> 
      <h1>Skincare That Actually Cares</h1>
  		<div class="countdown-hero__count-container-content">
  			<div id="countdown" class="countdown"></div>
        <h3>{{ settings.countdown_title }}</h3>
        <div class='product-dropped'>
          <h3>{{ settings.countdownend_title }}</h3>
        </div>
