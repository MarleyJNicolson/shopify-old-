          <p>Get Notified</p>
        </a>
        <a class="active-stock" href="https://zoebeebeauty.co.uk/collections/our-collections">shop our creams</a>
  		</div>
  	</div>
  	<div class="countdown-hero__products">
      <div class="countdown-hero__slider">
    		<div class="countdown-hero__slider-inside">
    			{% for block in section.blocks %} 
    			  {% assign product_item = all_products[block.settings.product] %}
    				 	<div class="countdown-hero__products-item">
    				 		<div class="countdown-hero__products-item-content">
    				 			<img  src="{{ block.settings.product_img | img_url: '1000x' }}"/> 
                  <h2>{{ product_item.title }}</h2>
    				 			<a href="{{ product_item.url }}">Shop Now</a>
    				 		</div>
    				 	</div>
    			{% endfor %}
    		</div>
        <div class="countdown-hero__slider-buttons"></div>
      </div>
  	</div>
  </div>
  <img class="countdown-hero__drawing-one" src="{{ 'Citrus.png' | asset_img_url: '500x' }}" />
   <img class="countdown-hero__drawing-two" src="{{ 'Citrus.png' | asset_img_url: '500x' }}" />
</section>

<!-- Welcome section ends -->
{% schema %}
{
"name": "Count down here",
  "blocks": [
    {
      "type": "product",
      "name": {
      },
      "settings": [
        {
          "id": "product",
          "type": "product",
          "label": "product"
        },
        {
          "id": "product_img",
          "type": "image_picker",
          "label": "product image"
        }
      ]
    }
  ],
	"presets": [
	{
	"name": "count down hero",
	"category": "ADVANCED LAYOUT"
	}
]
}
{% endschema %}
